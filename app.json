{
    "name": "TG-VIDEO-PLAYER",
    "description": "Video play in tg video chat",
    "repository": "https://github.com/shakida/TG-Video-Player",
    "stack": "container",
    "keywords": [
      "telegram",
      "voicechat",
      "bot",
      "video",
      "player",
      "python",
      "pyrogram",
      "pytgcalls",
      "videoplayer"
    ],
    "env": {
      "API_ID": {
        "description": "User Account Telegram API_ID get it from my.telegram.org/apps",
        "required": true
      },
      "API_HASH": {
        "description": "User Account Telegram API_HASH get it from my.telegram.org/apps",
        "required": true
      },
      "BOT_TOKEN": {
        "description": "Your Telegram Bot Token, get it from @Botfather XD",
        "required": true
      },
      "SESSION_STRING": {
        "description": "Pyrogram Session String of User Account",
        "required": true
      },
      "CHAT_ID": {
        "description": "Group ID",
        "required": true
      },
    },
    "formation": {
      "worker": {
        "quantity": 1,
        "size": "free"
      }
    },
    "buildpacks": [
      {
        "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
      },
      {
        "url": "heroku/python"
      }
    ]
  }
